<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.tese.practicas.practica01.AlumnoActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_edittext"
            android:layout_gravity="center_horizontal"
            android:hint="Ingresa el Nombre" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carrera_edittext2"
            android:layout_gravity="center_horizontal"
            android:hint="Ingresa la Carrera" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/curp_edittext3"
            android:layout_gravity="center_horizontal"
            android:hint="Ingresa el CURP" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bnt_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actualizar" />

            <Button
                android:id="@+id/bnt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrar" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Alumno"
            android:id="@+id/bnt_insert" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
